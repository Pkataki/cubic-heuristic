
# ---------------------------------------------------------------------
# Compiler selection 
# ---------------------------------------------------------------------

CCC = g++ -std=c++17  
#CCC = clang++ -std=c++17  

# ---------------------------------------------------------------------
# Compiler options 
# ---------------------------------------------------------------------

# -m64 -O3 -fno-strict-aliasing  -fPIC -fexceptions -DNDEBUG   

#CCOPT = -I/usr/include/c++/4.8/ -I/usr/include/x86_64-linux-gnu/c++/4.8 -L /usr/lib/gcc/x86_64-linux-gnu/4.8
CCOPT = -O3 


# ---------------------------------------------------------------------
# Link options and libraries
# ---------------------------------------------------------------------


CCFLAGS = $(CCOPT) 

# ---------------------------------------------------------------------
# Options that can be changed
# ---------------------------------------------------------------------


EXECUTABLE 		= cubic
FILENAME 		= main.cpp ./src/utils.cpp


all:
	$(CCC)  $(FILENAME)  -o $(EXECUTABLE) $(CCFLAGS)
